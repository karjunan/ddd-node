{
    "compilerOptions": {
      "module": "commonjs",
      "strict": true,
      "outDir": "./build",
      "removeComments": true,
      "experimentalDecorators": true,
      "target": "es6",
      "emitDecoratorMetadata": true,
      "moduleResolution": "node",
      "importHelpers": true,
      "listEmittedFiles": true,
      "strictPropertyInitialization": false,
      "sourceMap": true
    },
    "include": [
      "src/**/*"
  ]
  }